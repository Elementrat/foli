$navHeight = 50px

.Nav{
    height $navHeight
    display flex
    line-height $navHeight
    color white
    margin-bottom 10px
    align-items center
    justify-content center
    margin-top 70px
    padding 0px 25px


    .icons{  
        display flex
        align-items center
        flex-shrink 1
        flex-grow 0
        height 40px

        .icon{
            width $navHeight*.8
            height $navHeight*.8
            flex-shrink 1
            opacity .3
            margin-top 20px
            padding 0px 0px
            margin-left: 10px
            fill white
            transition opacity .2s ease

            &:hover{
                opacity 1
            }
        }
    }

    .name{
        float left
        flex-basis auto
        flex-shrink 0
        font-size 32px
        font-weight 800
    }

    .email{
        float right
        flex-basis auto
        width 1
        flex-shrink 0
    }

}


.menu{
    width 100%
    margin 0px auto
    display flex 
    justify-content center
    align-items center
    color white
    position relative
    
    .selected{
        background-color white   
        color $darkAccent 
    }

    .not-selected{
        background-color $darkAccent    
    }

}

.menu-item{
    float left
    padding 0px 25px
    cursor pointer
    position relative
    
    &:hover:after{
        background-color $lightAccent
        color white
        width 100%
        height 5px 
        left 0
        bottom 0
        content ''
        position absolute

    }
}