@require "vars.styl"
@require "Experiences.styl"
@require "Skills.styl"
@require "Nav.styl"

.App {
    padding 0px 0px
    width 100vw
    height 100vh
    font-family: 'Open Sans'
    display flex
    align-items center
    justify-content center
    font-size 20px
}

html{
    background-color $darkAccent
    font-weight 400
}

.grain{
    position absolute
    left 0
    top 0
    bottom 0
    right 0
    width 100%
    height 100%
    background-image url('/img/Grain-Texture-09.png')
    background-size contain
    background-position center
    opacity .05
}
  
.NameHolder{
    font-weight 400
    position relative
    color white
    height 200px
    width 200px
    margin 0px auto
    overflow hidden
    border-bottom 5px solid $lightAccent
    animation-fill-mode forwards
}

.MyName{
    font-weight bold
    padding-left 25px
    padding-right 25px
    text-align left
    color white
    font-size 45px
    overflow hidden
    transition height 1s ease
}

.Big-Name{
    height 200px   
    color white
}

.Small-Name{
    height 0px   
}


.EnterBtn{
    width 100%
    height 0px
    background-color $lightAccent
    overflow hidden
    position absolute
    bottom 0px
    text-align center
    line-height 40px
    animation-delay 2.5s
    animation-fill-mode forwards
    transition background-color .5s , color .5s
}

.EnterBtn:hover{
    background-color white
    color $darkAccent
    cursor pointer
}

@keyframes Shrink-EnterBtn{
    0%{
        height 40px
    }
    100%{
        height 0x
    }
}

@keyframes Grow-EnterBtn{
    0%{
        height 0px
    }
    100%{
        height 40px
    }
}


@keyframes Grow-NameHolder{
    0% {
        width 0px
        height 0px
    }
    50% {
        height 0px
        width 200px
    }
    100% {
        height 200px
    }
}

@keyframes Shrink-NameHolder{
    0% {
        height 200px
    }
    10% {
        height 0px
        width 200px
    }

    25% {
        height 0px
        width 1024px
    }


    100%{
        height 98%
        max-height 98%
        border-bottom 5px solid rgba(255,255,255,0)
        width 100%
        max-width 1024px
    }
}



