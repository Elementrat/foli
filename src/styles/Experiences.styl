@require "vars.styl"

$itemHeight = 125px
$radiusSize = 3px

.ResumeItems{
    width 1024px
    height 100%
    padding-top 5%
    left 0
    right 0
    top 0
    bottom 0
    margin auto auto
    display flex
    align-items center
    justify-content center
    align-self center
    flex-direction row
}

.ResumeItemDetails{
    width 100%
    height 200px
    color white
    float left
    border-radius $radiusSize
    display block
    background-color white
    flex-wrap wrap

    .coreInfo{
        width 100%
        height 50px
        line-height 50px
        font-weight bold
        border-bottom 5px solid $darkAccent
        background-color white
        padding 5px 5px

        div{
            color $darkAccent
            padding 0px 25px
            box-sizing border-box
            text-indent 0px
            float left
            margin-right 10px
        }
    }

    .company {

    }

    .description{
        color $darkAccent
        padding 25px 25px
    }

    .title{


    }
}

.resItem{
    animation slideIn forwards
    float left
    width 0px
    height 0px
    color white
    white-space nowrap
    margin-bottom 20px
    box-sizing border-box
    overflow hidden
    background-color white
    margin-right 10px
    cursor pointer
    border-radius $radiusSize

    .logo{
        float left
        width $itemHeight
        height $itemHeight
        background-position-x center
        background-position-y 150px
        background-size 75px 75px
        background-repeat no-repeat
        width $itemHeight
        box-sizing border-box
        height $itemHeight
        animation LogoEnter ease forwards
        transition all .3s ease
        transform scale(1)
    }

        .item-selected{
            background-color white
            border-bottom 5px solid $lightAccent
        }

        .item-not-selected{
            background-color white
            border-bottom 5px solid white
            &:hover{
                border-bottom 5px solid $lightAccent
            }
        }


    .logo:hover{
        transform scale(1.2)   
        margin-bottom 20px 
    }

}

@keyframes LogoEnter{
    0%{
        background-position-y: 200px
    }
    100%{
        background-position-y: 30px
    }
}


@keyframes slideIn{
    0%{
        width 0px
        height 0px
    }
    50%{
        height 0px
        width $itemHeight
    }
    100%{
        width $itemHeight
        height $itemHeight
    }
}

.visible{
    display flex

}

.invisible{
    display none

}